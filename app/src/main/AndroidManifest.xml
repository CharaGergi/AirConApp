<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.airconapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:noHistory="false"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.SearchResults.SearchResultsActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".view.ActivityUtilities.UtilitiesActivity" />
        <activity
            android:name=".view.AdvancedACSettings.AdvancedACSettingsActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".view.AirConDetails.AirConDetailsActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".view.AirCon.AirConActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".view.Profile.ProfileActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".view.Menu.MenuActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>